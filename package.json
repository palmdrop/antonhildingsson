{
	"name": "anton-hildingsson",
	"version": "0.0.1",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prebuild": "npm i && npm run process && npm run sync:sprawl",
		"process": "tsx ./scripts/process-work.ts",
		"content:push": "cd ./src/content && git add . && git commit -m 'Update' && git push && cd ../..",
		"postbuild": "node ./scripts/create-sitemap.js && npm run subset",
		"sync:sprawl": "node ./scripts/download-arena-sprawl.js",
		"sync:words": "node ./scripts/download-arena-words.js",
		"sync:writing": "node ./scripts/download-writing.js",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"subset": "node ./scripts/subset-fonts.js",
    "release": "git checkout release && git rebase main && git push && git checkout -"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/adapter-static": "^3.0.1",
		"@sveltejs/enhanced-img": "^0.3.1",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/dom-view-transitions": "^1.0.4",
		"@types/eslint": "^8.56.0",
		"@types/promise-fs": "^2.1.5",
		"@typescript-eslint/eslint-plugin": "^7.0.0",
		"@typescript-eslint/parser": "^7.0.0",
		"are.na": "^0.1.5",
		"dotenv": "^16.4.5",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0-next.4",
		"fast-glob": "^3.3.2",
		"mdsvex": "^0.11.1",
		"node-fetch": "^3.3.2",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"subfont": "^7.2.1",
		"svelte": "^5.0.0-next.1",
		"svelte-check": "^3.6.0",
		"svelte-sitemap": "^2.6.0",
		"tslib": "^2.4.1",
		"tsx": "^4.11.2",
		"typescript": "^5.0.0",
		"vite": "^5.0.3",
		"vite-plugin-run": "^0.5.2"
	},
	"type": "module"
}
